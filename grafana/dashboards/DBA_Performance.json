        "overrides": []
      },
      "gridPos": { "h": 4, "w": 8, "x": 0, "y": 0 },
      "id": 1,
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "orientation": "horizontal",
        "showPercentChange": true,
        "textMode": "auto"
      },
      "pluginVersion": "11.0.0",
      "targets": [
        {
          "format": "time_series",
          "rawSql": "SELECT\n  now() AS \"time\",\n  (xact_commit + xact_rollback) AS total_tx\nFROM pg_stat_database\nWHERE datname = '$database';",
          "refId": "A"
        }
      ],
      "title": "TPS (transactions/s) – pg_stat_database",
      "type": "stat"
    },
    {
      "datasource": {

        "textMode": "auto"
      },
      "pluginVersion": "11.0.0",
      "targets": [
        {
          "format": "time_series",
          "rawSql": "SELECT\n  now() AS \"time\",\n  blks_hit * 100.0 / NULLIF(blks_hit + blks_read, 0) AS cache_hit_ratio\nFROM pg_stat_database\nWHERE datname = '$database';",
          "refId": "A"
        }
      ],
      "title": "Cache hit ratio (%) – pg_stat_database",
      "type": "stat"
    },

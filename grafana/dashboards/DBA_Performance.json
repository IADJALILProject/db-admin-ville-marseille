      "targets": [
        {
          "format": "table",
          "rawSql": "SELECT\n  COALESCE(wait_event_type || '.' || wait_event, 'NO_WAIT') AS wait_event,\n  COUNT(*) AS sessions\nFROM pg_stat_activity\nWHERE datname = '$database'\nGROUP BY 1\nORDER BY sessions DESC;",
          "refId": "A"
        }

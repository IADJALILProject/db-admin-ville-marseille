{
  "id": null,
  "uid": "dbm-observability",
  "title": "PostgreSQL & Airflow - Ville de Marseille",
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "time": {
    "from": "now-24h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "Disponibilité Postgres",
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 },
      "targets": [
        {
          "refId": "A",
          "rawSql": "SELECT ts AS \"time\", CASE WHEN is_up THEN 100 ELSE 0 END AS availability FROM monitoring.db_health_status WHERE $__timeFilter(ts) ORDER BY ts;",
          "format": "time_series"
        }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "auto",
        "textMode": "auto",
        "colorMode": "value",
        "graphMode": "area"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": 0 },
              { "color": "orange", "value": 95 },
              { "color": "green", "value": 99 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "id": 2,
      "type": "timeseries",
      "title": "Latence moyenne des requêtes (ms)",
      "gridPos": { "h": 8, "w": 9, "x": 6, "y": 0 },
      "targets": [
        {
          "refId": "A",
          "rawSql": "SELECT ts AS \"time\", avg_query_ms FROM monitoring.db_health_status WHERE $__timeFilter(ts) ORDER BY ts;",
          "format": "time_series"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ms"
        },
        "overrides": []
      },
      "options": {
        "legend": { "showLegend": true }
      }
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "Sessions actives",
      "gridPos": { "h": 8, "w": 9, "x": 15, "y": 0 },
      "targets": [
        {
          "refId": "A",
          "rawSql": "SELECT ts AS \"time\", active_sessions FROM monitoring.db_health_status WHERE $__timeFilter(ts) ORDER BY ts;",
          "format": "time_series"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        },
        "overrides": []
      },
      "options": {
        "legend": { "showLegend": true }
      }
    },
    {
      "id": 10,
      "type": "timeseries",
      "title": "Sessions en attente & bloquantes",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 4 },
      "targets": [
        {
          "refId": "A",
          "rawSql": "SELECT ts AS \"time\", waiting_sessions, blocking_sessions FROM monitoring.db_health_status WHERE $__timeFilter(ts) ORDER BY ts;",
          "format": "time_series"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        },
        "overrides": []
      },
      "options": {
        "legend": { "showLegend": true }
      }
    },
    {
      "id": 4,
      "type": "stat",
      "title": "Taille totale base applicative",
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 4 },
      "targets": [
        {
          "refId": "A",
          "rawSql": "SELECT max(db_size_bytes) AS value FROM monitoring.db_health_status WHERE $__timeFilter(ts);",
          "format": "table"
        }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "auto",
        "textMode": "auto",
        "colorMode": "value",
        "graphMode": "area"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "decbytes",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 10737418240 },
              { "color": "red", "value": 21474836480 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "id": 6,
      "type": "timeseries",
      "title": "Activité WAL (octets cumulés)",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 12 },
      "targets": [
        {
          "refId": "A",
          "rawSql": "SELECT ts AS \"time\", wal_bytes_total FROM monitoring.wal_activity WHERE $__timeFilter(ts) ORDER BY ts;",
          "format": "time_series"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "decbytes"
        },
        "overrides": []
      },
      "options": {
        "legend": { "showLegend": true }
      }
    },
    {
      "id": 5,
      "type": "table",
      "title": "Top tables par taille",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 12 },
      "targets": [
        {
          "refId": "A",
          "rawSql": "SELECT ts AS \"time\", schema_name, table_name, size_bytes FROM monitoring.table_sizes WHERE $__timeFilter(ts) ORDER BY size_bytes DESC LIMIT 20;",
          "format": "table"
        }
      ],
      "options": {
        "showHeader": true
      },
      "fieldConfig": {
        "defaults": {
          "unit": "decbytes"
        },
        "overrides": []
      }
    },
    {
      "id": 7,
      "type": "table",
      "title": "Locks / contentions récentes",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 20 },
      "targets": [
        {
          "refId": "A",
          "rawSql": "SELECT ts AS \"time\", relation, mode, granted, query FROM monitoring.lock_events WHERE $__timeFilter(ts) ORDER BY ts DESC LIMIT 50;",
          "format": "table"
        }
      ],
      "options": {
        "showHeader": true
      },
      "fieldConfig": {
        "defaults": {},
        "overrides": []
      }
    },
    {
      "id": 8,
      "type": "table",
      "title": "Bloat des tables métier",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 20 },
      "targets": [
        {
          "refId": "A",
          "rawSql": "SELECT ts AS \"time\", schema_name, table_name, dead_pct FROM monitoring.table_bloat WHERE $__timeFilter(ts) ORDER BY dead_pct DESC LIMIT 20;",
          "format": "table"
        }
      ],
      "options": {
        "showHeader": true
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent"
        },
        "overrides": []
      }
    },
    {
      "id": 9,
      "type": "table",
      "title": "Statut des tâches Airflow (dernier 100)",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 28 },
      "targets": [
        {
          "refId": "A",
          "rawSql": "SELECT ts AS \"time\", dag_id, task_id, status, try_number FROM monitoring.task_status WHERE $__timeFilter(ts) AND dag_id = 'dbm_platform_observability' ORDER BY ts DESC LIMIT 100;",
          "format": "table"
        }
      ],
      "options": {
        "showHeader": true
      },
      "fieldConfig": {
        "defaults": {},
        "overrides": []
      }
    },
    {
      "id": 11,
      "type": "stat",
      "title": "Tâches Airflow échouées (période)",
      "gridPos": { "h": 4, "w": 12, "x": 12, "y": 28 },
      "targets": [
        {
          "refId": "A",
          "rawSql": "SELECT now() AS \"time\", COALESCE(sum(CASE WHEN status = 'failed' THEN 1 ELSE 0 END), 0) AS failed_tasks FROM monitoring.task_status WHERE $__timeFilter(ts) AND dag_id = 'dbm_platform_observability';",
          "format": "time_series"
        }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "auto",
        "textMode": "auto",
        "colorMode": "value",
        "graphMode": "area"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": 0 },
              { "color": "red", "value": 1 }
            ]
          }
        },
        "overrides": []
      }
    }
  ],
